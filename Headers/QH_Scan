#ifndef QH_SCAN_HEADER
#define QH_SCAN_HEADER

#include <stdio.h>
#include <stdlib.h>

#define KNRM  "\x1B[0m"
#define KRED  "\x1B[31m"
#define KGRN  "\x1B[32m"
#define KYEL  "\x1B[33m"
#define KBLU  "\x1B[34m"
#define KMAG  "\x1B[35m"
#define KCYN  "\x1B[36m"
#define KWHT  "\x1B[37m"
#define KBLK  "\x1B[30m"


void QH_Scan()
{  
  char url[100];
  char command[100];

  printf("\n%s ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ \n", KYEL);
  printf("%s                 HEADER INFO SUB-MODUL              \n", KWHT);
  printf("%s ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ \n \n", KYEL);

  printf("%s  Domain Name >> ", KWHT);
  scanf("%100s", url);
  
  printf("\n");
    
  printf(" %s────────────────────────────────────────────────── \n", KYEL);
  printf(" %s                  QUERY HEADER DUMP                \n", KWHT);
  printf(" %s────────────────────────────────────────────────── \n \n%s", KYEL, KWHT);

  system("echo -n '\033[0;37m'");
  sprintf(command, "printf '   ' && sudo curl %s -ISs | awk 1 ORS='\n   '", url);
  system(command);

}	
#endif
